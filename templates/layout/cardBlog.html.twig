
<div class="card shadow-sm">
    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
    <div class="card-body">
        <h4> {{article.titre }}</h4>
        <p class="card-text">{{article.description }}</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a href="{{ path('page_details',{slug: article.slug}) }}" class="btn btn-sm btn-outline-secondary">Lire S</a>
                <a href="{{ path('page_modifier',{slug: article.slug}) }}" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                <a href="{{ path('page_supp',{slug: article.slug}) }}" type="button" class="btn btn-sm btn-outline-secondary">supp</a>
            </div>
            <small class="text-body-secondary">{{article.dateCreation|ago}}</small>
        </div>
    </div>
</div>

